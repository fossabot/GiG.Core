{
  "Authentication": {
    "OAuth": {
      "IsEnabled": true,
      "Authority": "http://localhost:7070",
      "ApiName": "sample-web",
      "RequireHttpsMetadata": false,
      "Scopes": "openid profile"
    }
  },
  "ApplicationName": "GiG.Core.Web.Sample",
  "InfoManagement": {
    "Url": "/info"       
  },
  "Logging": {
    "MinimumLevel": "Information",
    "Sinks": {
      "Console": {
        "IsEnabled": true
      }
    }
  },
  "HealthChecks": {
    "LiveUrl": "/hc/live",
    "ReadyUrl": "/hc/ready"
  },
  "ApiDocs": {
    "Description": "Sample Web Application"
  },
  "TransactionSettings": {
    "MinimumDepositAmount": 5
  },
  "Tracing": {
    "IsEnabled": true,
    "Exporters": {
      "Jaeger": {
        "IsEnabled": true,
        "ServiceName": "sample-web",
        "AgentHost": "jaeger-agent", 
        "MaxPacketSize": 125
      }               
    }
  }
}