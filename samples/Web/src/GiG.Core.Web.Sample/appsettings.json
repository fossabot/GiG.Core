{
  "Authentication": {
    "OAuth": {
      "IsEnabled": true,
      "Authority": "http://localhost:7070",
      "ApiName": "sample-web",
      "RequireHttpsMetadata": false,
      "Scopes": "openid profile"
    }
  },
  "ApplicationName": "GiG.Core.Web.Sample",
  "InfoManagement": {
    "Url": "/info",
    "Checksum": {
      "Root": "/",
      "FilePath": "/checksum/checksum.app.txt"
    }
  },
  "Logging": {
    "MinimumLevel": "Information",
    "Sinks": {
      "Console": {
        "IsEnabled": true
      }
    }
  },
  "HealthChecks": {
    "LiveUrl": "/hc/live",
    "ReadyUrl": "/hc/ready"
  },
  "ApiDocs": {
    "Description": "Sample Web Application"
  },
  "TransactionSettings": {
    "MinimumDepositAmount": 5
  }
}